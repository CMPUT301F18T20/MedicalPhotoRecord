<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="Activities.BodyLocationActivity">
    <TextView
        android:id="@+id/body_location_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/body_location_welcome"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/body_location_overlay"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body_location_overlay"
        />
    <ImageView
        android:id="@+id/body_location"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/body_location"
        />

</FrameLayout>