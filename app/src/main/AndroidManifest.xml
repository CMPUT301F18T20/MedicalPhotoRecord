<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmput301f18t20.medicalphotorecord">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="Activities.BrowseUserActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Activities.ViewUserActivity" />
        <activity android:name="Activities.Login" />
        <activity android:name="Activities.SignUp" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <uses-library
            android:name="android.test.runner"
            android:required="false" />


        <activity
            android:name="Activities.ModifyUserActivity"
            android:label = "Modify User"
            android:parentActivityName = "Activities.BrowseUserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Activities.BrowseUserActivity"/>
        </activity>

        <activity android:name="Activities.ViewUserActivity"></activity>
        <activity android:name="Activities.PatientHomeMenuActivity" />
        <activity android:name="Activities.ProviderHomeMenuActivity"></activity>
    </application>

</manifest>